<header>
    <div class="container">
      <!-- App Logo -->
      <a href="/" class="logo">NotesNest</a>
  
      <!-- Navigation Links -->
      <nav>
        <a href="/notes">Notes</a>
      </nav>

      <!-- Profile Section -->
      <div class="profile">
        <% if (user && user.picture) { %>
          <img
            src="<%= user.picture %>"
            alt="Profile"
            class="profile-img"
        />
        <% } %>
        <div class="dropdown">
          <ul class="dropdown-menu">
            <li><a href="/profile">Profile</a></li>
            <li><a href="/logout">Logout</a></li>
            <li><button id="dark-mode-toggle">ðŸŒ™ Dark Mode</button></li>
          </ul>
        </div>
      </div>
  
      <!-- Mobile Menu Toggle (Optional for Responsive Design) -->
      <button id="mobile-menu-toggle">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"
          />
        </svg>
      </button>
    </div>
  </header>
  
  
  